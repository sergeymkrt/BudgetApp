@page "/accounts"
@rendermode InteractiveServer

@using System.Net.Http.Json
@using BudgetApp.Web.Models
@inject IHttpClientFactory HttpClientFactory

<PageTitle>Accounts - BudgetApp</PageTitle>

<!-- Page Header -->
<div class="section-header mb-4">
    <div>
        <h1>Accounts</h1>
        <p class="text-secondary mb-0">Manage your bank accounts and wallets.</p>
    </div>
</div>

@if (_isLoading)
{
    <div class="loading">
        <div class="loading-spinner"></div>
        <span class="loading-text">Loading accounts...</span>
    </div>
}
else if (!string.IsNullOrEmpty(_error))
{
    <div class="alert alert-danger">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"/>
            <path d="M12 8v4M12 16h.01"/>
        </svg>
        <span>@_error</span>
    </div>
}
else
{
    <!-- Add/Edit Account Form -->
    <div class="section fade-in">
        <div class="form-card">
            <h3 class="form-card-title">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 0.5rem; vertical-align: middle;">
                    @if (_isEditing)
                    {
                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                    }
                    else
                    {
                        <rect x="2" y="5" width="20" height="14" rx="2"/>
                        <path d="M2 10h20"/>
                    }
                </svg>
                @(_isEditing ? "Edit Account" : "Create New Account")
            </h3>

            @if (!string.IsNullOrEmpty(_success))
            {
                <div class="alert alert-success mb-3">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
                        <path d="M22 4L12 14.01l-3-3"/>
                    </svg>
                    <span>@_success</span>
                </div>
            }

            <EditForm Model="_formAccount" OnValidSubmit="SaveAccountAsync">
                <DataAnnotationsValidator />
                
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Account Name</label>
                        <InputText class="form-control" @bind-Value="_formAccount.Name" placeholder="e.g., Main Checking, Savings" />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Currency</label>
                        <select class="form-select" @bind="_formAccount.Currency">
                            <option value="USD">🇺🇸 USD - US Dollar</option>
                            <option value="EUR">🇪🇺 EUR - Euro</option>
                            <option value="GBP">🇬🇧 GBP - British Pound</option>
                            <option value="AMD">🇦🇲 AMD - Armenian Dram</option>
                            <option value="RUB">🇷🇺 RUB - Russian Ruble</option>
                            <option value="JPY">🇯🇵 JPY - Japanese Yen</option>
                            <option value="CAD">🇨🇦 CAD - Canadian Dollar</option>
                            <option value="AUD">🇦🇺 AUD - Australian Dollar</option>
                        </select>
                    </div>

                    <div class="form-group" style="display: flex; align-items: flex-end; gap: 0.75rem;">
                        <button class="btn btn-primary" type="submit" disabled="@_isSubmitting">
                            @if (_isSubmitting)
                            {
                                <div class="loading-spinner" style="width: 16px; height: 16px; border-width: 2px;"></div>
                                <span>@(_isEditing ? "Saving..." : "Creating...")</span>
                            }
                            else
                            {
                                <span>@(_isEditing ? "Save Changes" : "Create Account")</span>
                            }
                        </button>
                        
                        @if (_isEditing)
                        {
                            <button class="btn btn-secondary" type="button" @onclick="CancelEdit">
                                Cancel
                            </button>
                        }
                    </div>
                </div>
                
                <ValidationSummary class="mt-2" />
            </EditForm>
        </div>
    </div>

    <!-- Accounts List -->
    <div class="section fade-in stagger-1">
        <div class="section-header">
            <h2 class="section-title">Your Accounts</h2>
            <span class="badge badge-status">@_accounts.Count accounts</span>
        </div>

        @if (!_accounts.Any())
        {
            <div class="card">
                <div class="empty-state">
                    <div class="empty-state-icon">💳</div>
                    <p class="empty-state-text">No accounts yet. Create your first account above to start tracking your finances.</p>
                </div>
            </div>
        }
        else
        {
            <div class="account-grid">
                @foreach (var acc in _accounts)
                {
                    <div class="account-card">
                        <div style="display: flex; align-items: flex-start; justify-content: space-between; margin-bottom: 0.75rem;">
                            <div class="account-name">@acc.Name</div>
                            <span class="account-currency">@acc.Currency</span>
                        </div>
                        <div style="display: flex; align-items: center; gap: 0.5rem;">
                            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" class="text-muted">
                                <rect x="2" y="5" width="20" height="14" rx="2"/>
                                <path d="M2 10h20"/>
                            </svg>
                            <span class="text-secondary" style="font-size: 0.875rem;">Account</span>
                        </div>
                        <div class="account-id">
                            <span class="text-muted" style="font-size: 0.625rem;">ID:</span> @acc.Id
                        </div>
                        
                        <!-- Action buttons -->
                        <div style="display: flex; gap: 0.5rem; margin-top: 1rem; padding-top: 1rem; border-top: 1px solid var(--border-color);">
                            <button class="btn btn-ghost btn-sm" style="flex: 1;" @onclick="() => EditAccount(acc)">
                                <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                    <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"/>
                                    <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"/>
                                </svg>
                                Edit
                            </button>
                            <button class="btn btn-ghost btn-danger btn-sm" style="flex: 1;" 
                                    @onclick="() => ConfirmDelete(acc)" disabled="@(_deletingId == acc.Id)">
                                @if (_deletingId == acc.Id)
                                {
                                    <div class="loading-spinner" style="width: 14px; height: 14px; border-width: 2px;"></div>
                                }
                                else
                                {
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <polyline points="3 6 5 6 21 6"/>
                                        <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"/>
                                    </svg>
                                }
                                Delete
                            </button>
                        </div>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Quick Tips -->
    <div class="section mt-4 fade-in stagger-2">
        <div class="card" style="border-left: 3px solid var(--accent-primary);">
            <div style="display: flex; gap: 1rem;">
                <div style="color: var(--accent-primary); font-size: 1.5rem;">💡</div>
                <div>
                    <h3 style="font-size: 1rem; margin-bottom: 0.5rem;">Pro Tip</h3>
                    <p class="text-secondary mb-0" style="font-size: 0.875rem;">
                        Create separate accounts for different purposes — like checking, savings, and investments. 
                        This helps you track where your money is going and set better budgets.
                    </p>
                </div>
            </div>
        </div>
    </div>
}

<!-- Delete Confirmation Modal -->
@if (_showDeleteModal)
{
    <div class="modal-overlay" @onclick="CloseDeleteModal">
        <div class="modal-content" @onclick:stopPropagation="true">
            <h3 style="margin-bottom: 1rem;">Delete Account?</h3>
            <p class="text-secondary">
                Are you sure you want to delete the account 
                <strong class="text-primary">"@_accountToDelete?.Name"</strong>?
            </p>
            <p class="text-muted" style="font-size: 0.875rem;">
                ⚠️ Accounts with existing transactions cannot be deleted. 
                You'll need to delete or reassign the transactions first.
            </p>
            
            <div style="display: flex; gap: 0.75rem; justify-content: flex-end; margin-top: 1.5rem;">
                <button class="btn btn-secondary" @onclick="CloseDeleteModal">Cancel</button>
                <button class="btn btn-danger" @onclick="DeleteAccountConfirmed">
                    Delete
                </button>
            </div>
        </div>
    </div>
}

<style>
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.7);
        display: flex;
        align-items: center;
        justify-content: center;
        z-index: 1000;
        animation: fadeIn 0.15s ease-out;
    }
    
    .modal-content {
        background: var(--bg-card);
        border: 1px solid var(--border-color);
        border-radius: var(--radius-lg);
        padding: 1.5rem;
        max-width: 420px;
        width: 90%;
        animation: slideUp 0.2s ease-out;
    }
    
    @@keyframes slideUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

@code {
    private bool _isLoading = true;
    private bool _isSubmitting = false;
    private bool _isEditing = false;
    private string? _error;
    private string? _success;

    private List<AccountVm> _accounts = new();
    private AccountVm _formAccount = new() { Currency = "USD" };

    // Delete modal state
    private bool _showDeleteModal;
    private AccountVm? _accountToDelete;
    private Guid? _deletingId;

    protected override async Task OnInitializedAsync()
    {
        await LoadAccountsAsync();
    }

    private async Task LoadAccountsAsync()
    {
        _isLoading = true;
        _error = null;

        try
        {
            var client = HttpClientFactory.CreateClient("gateway-api");
            var accounts = await client.GetFromJsonAsync<List<AccountVm>>("/accounts");
            _accounts = accounts ?? new List<AccountVm>();
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isLoading = false;
        }
    }

    private async Task SaveAccountAsync()
    {
        _isSubmitting = true;
        _error = null;
        _success = null;

        try
        {
            if (string.IsNullOrWhiteSpace(_formAccount.Name))
            {
                _error = "Please enter an account name.";
                return;
            }

            var client = HttpClientFactory.CreateClient("gateway-api");
            HttpResponseMessage response;

            if (_isEditing)
            {
                response = await client.PutAsJsonAsync($"/accounts/{_formAccount.Id}", _formAccount);
            }
            else
            {
                response = await client.PostAsJsonAsync("/accounts", _formAccount);
            }

            if (!response.IsSuccessStatusCode)
            {
                var text = await response.Content.ReadAsStringAsync();
                _error = $"Error: {response.StatusCode}";
            }
            else
            {
                _success = _isEditing 
                    ? $"Account '{_formAccount.Name}' updated successfully!" 
                    : $"Account '{_formAccount.Name}' created successfully!";
                ResetForm();
                await LoadAccountsAsync();
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _isSubmitting = false;
        }
    }

    private void EditAccount(AccountVm acc)
    {
        _isEditing = true;
        _formAccount = new AccountVm
        {
            Id = acc.Id,
            Name = acc.Name,
            Currency = acc.Currency
        };
        _error = null;
        _success = null;
    }

    private void CancelEdit()
    {
        ResetForm();
    }

    private void ResetForm()
    {
        _isEditing = false;
        _formAccount = new AccountVm { Currency = "USD" };
    }

    private void ConfirmDelete(AccountVm acc)
    {
        _accountToDelete = acc;
        _showDeleteModal = true;
    }

    private void CloseDeleteModal()
    {
        _showDeleteModal = false;
        _accountToDelete = null;
    }

    private async Task DeleteAccountConfirmed()
    {
        if (_accountToDelete is null) return;

        _showDeleteModal = false;
        _deletingId = _accountToDelete.Id;
        _error = null;

        try
        {
            var client = HttpClientFactory.CreateClient("gateway-api");
            var response = await client.DeleteAsync($"/accounts/{_accountToDelete.Id}");

            if (!response.IsSuccessStatusCode)
            {
                var content = await response.Content.ReadAsStringAsync();
                if (content.Contains("transactions"))
                {
                    _error = "Cannot delete account with existing transactions. Delete or reassign transactions first.";
                }
                else
                {
                    _error = "Failed to delete account.";
                }
            }
            else
            {
                _success = $"Account '{_accountToDelete.Name}' deleted successfully!";
                await LoadAccountsAsync();
            }
        }
        catch (Exception ex)
        {
            _error = ex.Message;
        }
        finally
        {
            _deletingId = null;
            _accountToDelete = null;
        }
    }
}
